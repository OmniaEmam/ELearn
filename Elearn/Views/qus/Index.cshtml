@model IEnumerable<Elearn.Models.qu>

@{
    ViewBag.Title = "Index";
}

<head>
    <title>All Question Page</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Content/login/css/style.css">
    <link href="~/Content/Ueaser.css" rel="stylesheet" />
</head>
<br />
<br />

<!-- ======= Breadcrumbs ======= -->
<section class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>All Question Page</h2>

        </div>

    </div>
</section><!-- End Breadcrumbs -->

<section class="inner-page">
    <div class="container">
        <h1>
            @Html.ActionLink("Create New", "Create")
            </h1>
            <table class="table" style="border: 1px solid black">
                <tr class="h2" style="border: 1px solid black">
                    <th style="border: 1px solid black">
                       Question
                    </th>
                    <th style="border: 1px solid black">
                       1
                    </th>
                    <th style="border: 1px solid black">
                      2
                    </th>
                    <th style="border: 1px solid black">
                       3
                    </th>
                    <th style="border: 1px solid black">
                        4
                    </th>
                    <th style="border: 1px solid black">
                        Answer
                    </th>
                    <th style="border: 1px solid black">
                        Answer Reason
                    </th>
                    <th style="border: 1px solid black">
                        Emp_ID
                    </th>
                    <th style="border: 1px solid black">
                        Exam_ID
                    </th>
                    <th style="border: 1px solid black">
                        Edit
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr style="border: 1px solid black">
                        <td style="border: 1px solid black">
                            @Html.DisplayFor(modelItem => item.Qu1)
                        </td>
                        <td style="border: 1px solid black">
                            @Html.DisplayFor(modelItem => item.An1)
                        </td>
                        <td style="border: 1px solid black">
                            @Html.DisplayFor(modelItem => item.An2)
                        </td>
                        <td style="border: 1px solid black">
                            @Html.DisplayFor(modelItem => item.An3)
                        </td>
                        <td style="border: 1px solid black">
                            @Html.DisplayFor(modelItem => item.An4)
                        </td>
                        <td style="border: 1px solid black">
                            @Html.DisplayFor(modelItem => item.QreAn)
                        </td>
                        <td style="border: 1px solid black">
                            @Html.DisplayFor(modelItem => item.reason_an)
                        </td>
                        <td style="border: 1px solid black">
                            @Html.DisplayFor(modelItem => item.id_emp)
                        </td>
                        <td style="border: 1px solid black">
                            @Html.DisplayFor(modelItem => item.idexame)
                        </td>
                        <td style="border: 1px solid black">
                            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                        </td>
                    </tr>
                }

            </table>
</div>
</section>