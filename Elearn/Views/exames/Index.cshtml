@model IEnumerable<Elearn.Models.exame>

@{
    ViewBag.Title = "Index";
}

<head>
    <title>Exama</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Content/login/css/style.css">
    <link href="~/Content/Ueaser.css" rel="stylesheet" />
</head>

<br />
<br />

<!-- ======= Breadcrumbs ======= -->
<section class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>Exama</h2>

        </div>

    </div>
</section><!-- End Breadcrumbs -->
<section class="inner-page">
    <div class="container">
        <h1>
            @Html.ActionLink("Create New", "Create")
        </h1>
        <<table class="table">
            <tr class="h2">
                <th>
                    @Html.DisplayNameFor(model => model.photo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.id_emp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.id_teacher)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.idgroup)
                </th>
                <th></th>
            </tr>


            @foreach (var item in Model)
            {
                <tr  class="h2">
                    <td>
                        <img src="@item.photo" height="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.id_emp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.id_teacher)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.idgroup)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.id }) |

                        @Html.ActionLink("Delete", "Delete", new { id = item.id })|
                        <a href="@Url.Action("Create", "qus", new { id = item.id })">add qu</a>

                    </td>
                </tr>
            }

        </table>
    </div>
</section>
